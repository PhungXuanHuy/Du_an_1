<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:padding="16dp"
    android:background="@color/bg_app"
    tools:context=".BatDauTuVungActivity">
    <ImageView
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:src="@drawable/tongdiem"
        android:id="@+id/ivHinh"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="bạn đã sẵn sàng học từ vựng chưa?"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textAllCaps="true"
        android:layout_marginTop="30dp"
        android:layout_marginBottom="50dp"
        android:textSize="20sp"
        android:fontFamily="sans-serif-black"
        />
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="bắt đầu"
        android:id="@+id/btnBatDau"
        android:layout_marginBottom="16dp"
        android:background="@drawable/shape_button"
        />
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="vẫn chưa"
        android:id="@+id/btnVanChua"
        android:textColor="@color/color_main"
        android:background="@drawable/shape_button2"
        />
</LinearLayout>