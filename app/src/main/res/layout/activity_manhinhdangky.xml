<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#5A5959"
    tools:context=".Manhinhdangky">

    <RelativeLayout
        android:id="@+id/toolbarDk"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="#141F25">

        <ImageView
            android:id="@+id/ivTroLai"
            android:layout_marginLeft="8dp"
            android:layout_width="32dp"
            android:layout_centerVertical="true"
            android:layout_height="32dp"
            android:src="@drawable/ic_trolai" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:text="Đăng ký"
            android:layout_centerVertical="true"
            android:textAlignment="center"
            android:textColor="#ffff"
            android:textSize="24sp"
            android:textStyle="bold" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/llUser"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/toolbarDk"
        android:layout_marginTop="1dp"
        android:background="#141F25"
        android:padding="16dp">

        <EditText
            android:id="@+id/edTenDangNhap"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:background="@drawable/shape_tendangnhap"
            android:hint="Tên đăng nhập"
            android:inputType="text"
            android:padding="16dp"
            android:textColor="@color/white"
            android:textColorHint="#ffff" />

        <EditText
            android:id="@+id/edMatKhau"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/edTenDangNhap"
            android:background="@drawable/shape_dangky"
            android:hint="Mật khẩu"
            android:inputType="textPassword"
            android:padding="16dp"
            android:textColor="@color/white"
            android:textColorHint="#ffff" />

        <EditText
            android:id="@+id/edNhapLaiMatKhau"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/edMatKhau"
            android:background="@drawable/shape_matkhau"
            android:hint="Nhập lại mật khẩu"
            android:inputType="textPassword"
            android:padding="16dp"
            android:textColor="@color/white"
            android:textColorHint="#ffff" />

        <Button
            android:id="@+id/btnDangKy"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/edNhapLaiMatKhau"
            android:layout_marginTop="24dp"
            android:layout_marginBottom="32dp"
            android:background="@drawable/shape_btndangnhap"
            android:enabled="false"
            android:text="Đăng ký"
            android:textColor="@color/white"
            android:textSize="16sp"
            android:textStyle="bold" />
    </RelativeLayout>




</RelativeLayout>