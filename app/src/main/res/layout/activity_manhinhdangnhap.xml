<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#5A5959"
    android:orientation="vertical"
    tools:context=".Manhinhdangnhap">


    <RelativeLayout
        android:id="@+id/toolbarDN"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="#141F25"
        >

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_marginBottom="16sp"
            android:text="Đăng nhập"
            android:textAlignment="center"
            android:textColor="#ffff"
            android:textSize="24sp"
            android:textStyle="bold" />

    </RelativeLayout>

    <LinearLayout
        android:id="@+id/llUser"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/toolbarDN"
        android:layout_marginTop="1dp"
        android:orientation="vertical"
        android:background="#141F25"
        android:padding="16dp">

        <EditText
            android:id="@+id/edTenDangNhap"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/shape_tendangnhap"
            android:textColor="@color/white"
            android:inputType="text"
            android:hint="Tên đăng nhập"
            android:padding="16dp"
            android:textColorHint="#ffff" />

        <EditText
            android:id="@+id/edMatKhau"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/shape_matkhau"
            android:hint="Mật khẩu"
            android:textColor="@color/white"
            android:inputType="textPassword"
            android:padding="16dp"
            android:textColorHint="#ffff" />

        <Button
            android:textSize="16sp"
            android:id="@+id/btnDangNhap"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="32dp"
            android:background="@drawable/shape_btndangnhap"
            android:enabled="false"
            android:text="Đăng nhập"
            android:textColor="@color/white"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tvDangKy"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Tôi chưa có tài khoản"
            android:textAlignment="center"
            android:textAllCaps="true"
            android:textColor="#55d8ff"
            android:textSize="16sp"
            android:textStyle="bold" />
    </LinearLayout>




</LinearLayout>