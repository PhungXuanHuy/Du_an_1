<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#5A5959"
    tools:context=".Fragment.XepHangFragment">

    <RelativeLayout
        android:id="@+id/rlXepHang"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:background="#141F25">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="TOP 10 THÀNH VIÊN CÓ TỔNG ĐIỂM CAO NHẤT"
            android:textColor="@color/white"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true"
            android:textSize="30sp"
            android:textAlignment="center"
            />

    </RelativeLayout>

    <RelativeLayout
        android:layout_marginTop="1dp"
        android:padding="8dp"
        android:background="#141F25"
        android:layout_width="match_parent"
        android:layout_below="@id/rlXepHang"
        android:layout_height="match_parent">

        <ListView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/lvXepHang"
            />

    </RelativeLayout>


</RelativeLayout>